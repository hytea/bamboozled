{
  "name": "bamboozled-backend",
  "version": "1.0.0",
  "description": "Backend server for Bamboozled puzzle game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "debug:slack": "tsx src/debug.ts",
    "debug:slack-echo": "tsx src/slack-debug.ts",
    "debug:simple-bot": "tsx src/simple-slack-bot.ts",
    "db:init": "tsx src/scripts/db-init.ts",
    "db:reset": "tsx src/scripts/db-init.ts --reset",
    "db:export": "tsx src/scripts/db-export.ts",
    "db:import": "tsx src/scripts/db-import.ts",
    "db:health": "tsx src/scripts/db-health.ts"
  },
  "keywords": [
    "puzzle",
    "slack",
    "claude",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.0.1",
    "@slack/bolt": "^4.1.0",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "kysely": "^0.27.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.7"
  }
}
