# AI Provider Configuration
AI_PROVIDER=claude  # Options: claude, openrouter, local
AI_API_KEY=your-api-key-here

# Claude Configuration (if using Claude)
ANTHROPIC_API_KEY=your-anthropic-key

# OpenRouter Configuration (if using OpenRouter)
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_MODEL=anthropic/claude-sonnet-4.5

# Local Model Configuration (Ollama)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama3.2

# Server Configuration
PORT=3001
WEB_CHAT_PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/bamboozled.db
RESET_DB=false  # Set to 'true' to wipe database on startup (WARNING: deletes all data)

# Slack Configuration (optional)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token
ENABLE_SLACK=false

# Giphy Configuration (optional - fallback GIFs used if not provided)
# Get your free API key at: https://developers.giphy.com/
GIPHY_API_KEY=your-giphy-key

# Puzzle Configuration
PUZZLE_DATA_PATH=./puzzles/puzzle-data.json
PUZZLE_IMAGES_PATH=./puzzles/images
PUZZLE_ROTATION_DAY=1  # Monday = 1, Sunday = 7
PUZZLE_ROTATION_HOUR=9  # 9 AM

# Feature Flags
ENABLE_WEB_CHAT=true
